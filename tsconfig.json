{
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "esModuleInterop": true,
    "module": "nodenext",
    "skipLibCheck": true,
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "zustand-slices": ["./src/index.js"],
      "zustand-slices/immer": ["./src/immer/index.js"]
    }
  },
  "exclude": ["dist", "examples"]
}
